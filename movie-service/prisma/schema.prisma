generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id          String   @id @default(uuid())
  title       String
  description String
  duration    Int
  releaseDate DateTime
  posterUrl   String
  trailerUrl  String
  imdbRating  Float
  appRating   Float
  status      MovieStatus
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
}

enum MovieStatus {
  UPCOMING
  NOW_SHOWING
  ENDED
}
